void raw_to_dec(char* T, upL_t L){
    char* stop = T + L;

    //  Iterate until T is aligned.
    while  (T < stop && ((upL_t)T & 15)){
        rawdec::convert_dec1_forward_Default(T);
        T += 1;
    }

    while (T < stop - 63){
        rawdec::convert_dec64_forward_SSE2(T);
        T += 64;
    }
    //while (T < stop - 31){
    //    rawdec::convert_dec32_forward_SSE2(T);
    //    T += 32;
    //}
    while (T < stop - 15){
        rawdec::convert_dec16_forward_SSE2(T);
        T += 16;
    }
    //while (T < stop - 7){
    //    rawdec::convert_dec8_forward_Default32(T);
    //    T += 8;
    //}
    while (T < stop - 3){
        rawdec::convert_dec4_forward_Default32(T);
        T += 4;
    }
    while (T < stop){
        rawdec::convert_dec1_forward_Default(T);
        T += 1;
    }
}
