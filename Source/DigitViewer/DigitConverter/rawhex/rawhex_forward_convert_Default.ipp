void raw_to_hex(char* T, upL_t L){
    char* stop = T + L;

    //  Iterate until T is aligned.
    while  (T < stop && ((upL_t)T & 3)){
        rawhex::convert_hex1_forward_Default(T);
        T += 1;
    }

    while (T < stop - 7){
        rawhex::convert_hex8_forward_Default32(T);
        T += 8;
    }
    while (T < stop - 3){
        rawhex::convert_hex4_forward_Default32(T);
        T += 4;
    }
    while (T < stop){
        rawhex::convert_hex1_forward_Default(T);
        T += 1;
    }
}
