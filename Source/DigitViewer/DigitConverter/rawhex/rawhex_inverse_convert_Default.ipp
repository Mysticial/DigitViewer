bool hex_to_raw(char* T, upL_t L){
    char* stop = T + L;
    u32_t bad = 0;

    //  Iterate until T is aligned.
    while  (T < stop && ((upL_t)T & 3)){
        bad |= rawhex::convert_hex1_inverse_Default(T);
        T += 1;
    }

    while (T < stop - 3){
        bad |= rawhex::convert_hex4_inverse_Default32(T);
        T += 4;
    }
    while (T < stop){
        bad |= rawhex::convert_hex1_inverse_Default(T);
        T += 1;
    }

    return bad != 0;
}
